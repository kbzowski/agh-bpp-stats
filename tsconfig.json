{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "incremental": true,
    "skipLibCheck": true,
//    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "importHelpers": true,
    "jsx": "react",
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "outDir": "build",
    "rootDir": "."
  },
  "include": [
    "src/**/*",
  ],
  "exclude":[
    "node_modules"
  ]
}
