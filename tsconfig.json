{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2017",
    "sourceMap": true,
    "outDir": "build",
    "rootDir": ".",
    "incremental": true,
    "skipLibCheck": true
  },
  "include": [
    "app.ts",
    "src/**/*",
  ],
  "exclude":[
    "node_modules"
  ]
}
